
<h3>Search: Shipped Cards!</h3>
<div ng-controller="CardsCtrl">

    <form>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-search"></i></div>
          <input type="text" class="form-control" ng-model="$scope.query">
        </div>      
      </div>
    </form>

    <table class="table table-bordered table-striped" border="1"> 
      <thead>
      <tr>
        <th>
          <a href="#" ng-click="sortType = 'name'; sortReverse = !sortReverse">
          Card Title
          <span ng-show="sortType == 'name' && !sortReverse" class="fa fa-caret-down"></span>
          <span ng-show="sortType == 'name' && sortReverse" class="fa fa-caret-up"></span>
        </th>
        <th>
           <a href="#" ng-click="sortType = 'days'; sortReverse = !sortReverse"">
           Cycle Time
           <span ng-show="sortType == 'days' && !sortReverse" class="fa fa-caret-down"></span>
           <span ng-show="sortType == 'days' && sortReverse" class="fa fa-caret-up"></span>
        </th>
        <th>
          <a href="#" ng-click="sortType = 'labels'; sortReverse = !sortReverse"">
          Labels
          <span ng-show="sortType == 'labels' && !sortReverse" class="fa fa-caret-down"></span>
          <span ng-show="sortType == 'labels' && sortReverse" class="fa fa-caret-up"></span>
        </th>
        <th>Link</th>
      </tr>
      </thead>

      <tr ng-repeat="card in cards | filter:$scope.query  | orderBy:sortType:sortReverse" >
        <td>{{card.name}}</td>
        <td>{{card.days}}</td>
        <td>{{card.labels}}</td>
        <td><a ng-href="{{card.url}}">{{card.url}}</a></td>
      </tr>    
    </table>
  
</div>
